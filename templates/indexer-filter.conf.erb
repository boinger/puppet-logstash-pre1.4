  # Oct  6 03:32:23 baker0 puppet-agent[13160]: (/Stage[main]/Daemontools::

  # SYSLOGTIMESTAMP %{MONTH} +%{MONTHDAY} %{TIME}
  # SYSLOGPROG %{PROG:program}(?:\[%{POSINT:pid}\])?

  grok {
    match => ["@source_path", "/var/log/messages"]
    patterns_dir => ["/etc/logstash/grok_patterns"]
    pattern => "%{SYSLOGTIMESTAMP:syslog_timestamp} %{SYSLOGHOST:syslog_host} %{SYSLOGPROG}: %{GREEDYDATA:message}"
    add_field => [ "syslog_timestamp", "%{@syslog_timestamp}" ]
    add_field => [ "syslog_host", "%{@syslog_host}" ]
    add_field => [ "program", "%{@program}" ]
    add_tag => ["%{@program}"]
  }

